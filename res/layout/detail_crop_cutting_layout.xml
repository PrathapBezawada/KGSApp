<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5eeff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#254117" >

        <TextView
            android:id="@+id/label0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Crop Cutting Experiments"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <Button
                android:id="@+id/cce_save"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/save"
               />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/cancel"
                />
        </LinearLayout>

        <Button
            android:id="@+id/cce_edit"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignTop="@+id/label0"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/label0"
            android:background="@drawable/edit_cceimg" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/column1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/label2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="User Name"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/cce_username"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:paddingLeft="8dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/label3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Harvest Date"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/cce_harvest_date"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:paddingLeft="8dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/label4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Harvest area (sq.m)"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/cce_harvest_area"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/label5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Fresh weight of Pod/Grains for Farmers practice (kg)"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/cce_fw_pod_grains"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/label6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Fresh weight of fodder for farmers practice (kg)"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/cce_fw_fodder"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/label7"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Fresh weight of Pod/Grains for improved practice (kg)"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/cce_fw_pod_improved"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/label7"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Fresh weight of fodder for improved practice (kg)"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/cce_fw_fodder_ip"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/column3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:background="@drawable/image_bg" >

                        <ImageView
                            android:id="@+id/takePhoto"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" 
                            android:src="@drawable/no_image"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/editPhoto"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edit_image"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/label12"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Sub sample Fresh weight of Pod/Grains for Farmers practice (kg)"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/cce_ss_fw_pod_fp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/label8"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Sub sample Fresh weight of fodder for farmers practice (kg)"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/cce_ss_fw_fodder"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/label9"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Subsample Fresh weight of Pod/Grains for improved practice (kg)"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/cce_ss_fw_pod"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/label10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Sub sample Fresh weight of fodder for improved practice (kg)"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/cce_ss_fw_improvedp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/complete"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>