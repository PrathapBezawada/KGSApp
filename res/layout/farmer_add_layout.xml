<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5eeff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#254117" >

        <TextView
            android:id="@+id/label0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text=" New Farmer Registration Form"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/save"
                android:onClick="saveRecord" />

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/clear"
                android:onClick="cancelSave" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/cancel"
                android:onClick="closeScreen" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/column1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/label1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="First Name(*)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Last Name(*)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Father Name"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/father_name"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Gender"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/sex"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdown_bg"
                    android:entries="@array/sex_array"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="#Mobile(*)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:inputType="number"
                    android:maxLength="15"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="#Telephone"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/telephone"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:inputType="number"
                    android:maxLength="15"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Caste"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/caste"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/dropdown_bg"
                    android:entries="@array/caste_array"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/column2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/label21"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Select ID Type"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/select_id_type"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/dropdown_bg"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label22"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="ID Number"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/id_no"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890()/ -.,"
                    android:gravity="center_vertical"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label15"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:gravity="center_vertical"
                    android:text="Rain Fed(Acre)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/rain_fed"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:inputType="numberDecimal"
                    android:maxLength="15"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label16"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Irrigated(Acre)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/irrigated"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:inputType="numberDecimal"
                    android:maxLength="15"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label17"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Plantation(Acre)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/plantation"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:inputType="numberDecimal"
                    android:maxLength="15"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label18"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Fallow(Acre)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/fallow"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:inputType="numberDecimal"
                    android:maxLength="15"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label14"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Total Farm Area(Acre)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/total_area"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/complete"
                    android:enabled="false"
                    android:maxLength="15"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/column3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/label13"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Field Name"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:visibility="gone" />

                 <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="110dp" 
                    android:layout_marginTop="10dp"
                    android:background="@drawable/image_bg"
                    >

                    <ImageView
                        android:id="@+id/takePhoto"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/no_image"
                         />

                    <Button
                        android:id="@+id/editPhoto"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/edit_image"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/label19"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Survery No"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/survey_no"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890/ ()-.,"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="District"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/district"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/complete"
                    android:enabled="false"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Taluk"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/taluk"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dropdown_bg"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Hobli"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/hobli"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:background="@drawable/dropdown_bg"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/label11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Village(*)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/village"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/dropdown_bg"
                    android:typeface="serif" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>