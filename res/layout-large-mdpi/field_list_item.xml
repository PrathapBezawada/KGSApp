<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#e5eeff"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/farm_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:text="xxxxxxxxxxxxx"
        android:textColor="#000000"
        android:typeface="serif" />

    <TextView
        android:id="@+id/crop_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1"
        android:autoLink="phone"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:text="xxxxxxxxxxxxx"
        android:textColor="#000000"
        android:typeface="serif" />

    <TextView
        android:id="@+id/village_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:text="xxxxxxxxxxxxx"
        android:textColor="#000000"
        android:typeface="serif" />

        <Button
            android:id="@+id/addandviewsoilMapping"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/view"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center" />


        <Button
            android:id="@+id/viewMap"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/map"
            android:focusable="false"
            
            android:focusableInTouchMode="false"
            android:gravity="center" />

        <Button
            android:id="@+id/viewFertilizer"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/view"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/viewCCE"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/add_cceimg"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical" />
    
    
</LinearLayout>